<html>

<head>
    <title>COOK A BOOK</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">

    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.3.2/angular-ui-router.min.js"></script>

    <script src="/javascripts/angularApp.js"></script>
    <style>
        .glyphicon-thumbs-up {
            cursor: pointer;
        }
    </style>
</head>

<body ng-app="cookbook">
    <nav class="navbar navbar-default pull-right" ng-controller="NavCtrl">
        <ul class="nav navbar-nav">
            <li ng-show="isLoggedIn()"><a href="/#/user/{{ currentUser()}}">{{ currentUser() }}</a></li>
            <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
            <li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
            <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
        </ul>
    </nav>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">

            <div ui-view></div>

        </div>
    </div>


    <!-- in-line template starts here -->

    <script type="text/ng-template" id="/home.html"></script>

    <script type="text/ng-template" id="/recipes.html"></script>

    <script type="text/ng-template" id="/user.html"></script>

    <script type="text/ng-template" id="/register.html"></script>

    <script type="text/ng-template" id="/login.html"></script>

</body>

</html>
